{
  "name": "aetherquill",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "packages/client",
    "packages/server",
    "packages/common"
  ],
  "scripts": {
    "dev:client": "npm run dev --workspace=packages/client",
    "dev:server": "npm run start:dev --workspace=packages/server",
    "dev": "npm-run-all --parallel dev:client dev:server",
    "build": "npm run build --workspace=packages/client",
    "preview": "npm run preview --workspace=packages/client"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "npm-run-all": "^4.1.5",
    "typescript": "~5.8.3"
  }
}
